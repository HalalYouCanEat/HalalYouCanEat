<%= form_tag search_restaurants_path, method: :get do %>
	<div class="text-center filter-form">
		<div>
			<%= text_field_tag :name, nil, placeholder: 'Name of Restaurant', class: "filter-search-bar" %>
		</div>
		<div class="checkbox-container">
			<h4>Cuisines</h4>
			<% cuisine_collector.each do |cuisine| %>
				<%# collects the first element in cuisine %>
				<% cuisine = cuisine[0] %>
				<div class="flex-container checkbox">
					<%= check_box_tag "cuisine[]", cuisine %>
					<%= label_tag cuisine %>
				</div>
			<% end %>
		</div>
		
		<div class="checkbox-container">
			<h4>Cities</h4>
			<% city_collector.each do |city| %>
				<% city = city[0] %>
				<div class="flex-container checkbox">
					<%= check_box_tag "city[]", city %>
					<%= label_tag city %>
					
				</div>
			<% end %>
		</div>
	</div>
	<div class="search-button">
		<%= submit_tag "Filter" %>
	</div>
<% end %>