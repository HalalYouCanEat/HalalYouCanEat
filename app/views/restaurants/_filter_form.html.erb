<%= form_tag search_restaurants_path, method: :get do %>
	<div class="text-center">
		<div class="search-bar mb-3">
			<%= text_field_tag :name, nil, placeholder: 'Name of Restaurant' %>
		</div>
		<div class="search-bar mb-5">
			<%= select_tag :cuisine, options_for_select(cuisine_collector), prompt: 'Select Cuisine' %>
		</div>
		<div class="search-bar mb-5">
			<%= select_tag :city, options_for_select(city_collector), prompt: 'Select City' %>
		</div>
	</div>
	<div class="search-button">
		<%= submit_tag "Filter" %>
	</div>
<% end %>