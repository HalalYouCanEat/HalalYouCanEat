<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<div class="center jumbotron">
	<h2>Halal You Can Eat</h2>
	<h4>Find the best Halal food near you</h4>
	<%# list and map of halal food icons %>
	<div>
		<%= 
		button_to image_tag("list_icon.png", :alt => "List", :size => "50x50"), 
		"#", :method => :get,
		onclick:"showDiv('#list')"
		%>
		<%=
		button_to image_tag("map_icon.png", :alt => "Map", :size => "50x50"),
		"#", :method => :get,
		onclick:"showDiv('#map')"
		%>
	</div>
	<div id = "map">
		<%= render "map"%>
	</div>
	<div id = "list">
		<%= render "list" %>
	</div>
	<p> Want to review places you've been to? 
	<%# <a href="/signup">Sign up now!</a> %>
	<%= link_to "Sign up now!", signup_path%>
	</p>
</div>

<%# script for making div appear and disappear on click %>
<script>
	function showDiv(divName) {
		console.log("showDiv called");
		if(divName == "#map"){
			console.log("map");
			document.getElementById("map").style.display = "block";
			document.getElementById("list").style.display = "none";
		}
		else{
			console.log("list");
			document.getElementById("map").style.display = "none";
			document.getElementById("list").style.display = "block";
		}
		// 
		// $(divName).show();
	}
</script>