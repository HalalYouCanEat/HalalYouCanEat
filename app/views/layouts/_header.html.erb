  <div class="container-fluid">
    <%= link_to "Halal You Can Eat", root_path, id: "logo" %>
  </div>
</header>

<header class="navbar navbar-inverse" id="navbar-bottom">
  <div class="container-fluid">
    <nav>
      <div class="navbar-header">
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <ul id="navbar-menu"
          class="nav navbar-nav navbar-right collapse navbar-collapse">
        <li><%= link_to "Home", root_path %></li>
		<li><%= link_to "About the App", about_app_path %></li>
		<li><%= link_to "About the Devs", about_devs_path %></li>
		<li><%= link_to "About Halal", about_halal_path %></li>
		<% if not logged_in? %>
			<li><%= link_to "Signup", signup_path %></li>
		<% end %>
        <% if logged_in? %>
		   <%# not sure what the user link is supposed to do %>
          <li><%= link_to "Users", '#' %></li>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              Account <b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu">
				<li><%= link_to "View My Reviews", "#" %></li>
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path,
                                       data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </li>
